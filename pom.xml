		<module>socialMediaOntologyService-service-impl</module>
		<module>socialMediaOntologyService-service-api</module>
		<module>socialMediaOntologyService-rest-model</module>
		<module>socialMediaOntologyService-rest-api</module>
		<module>socialMediaOntologyService-integrationtest</module>
	</modules>
</project>