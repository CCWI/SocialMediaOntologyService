		<guava.version>21.0</guava.version>
		<mapstruct.version>1.1.0.Final</mapstruct.version>
		<javax-inject.version>1</javax-inject.version>
		<javax-cache.version>1.0.0</javax-cache.version>
		<jena.version>3.2.0</jena.version>
